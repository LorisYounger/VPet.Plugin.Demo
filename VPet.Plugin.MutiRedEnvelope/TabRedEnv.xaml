<TabItem x:Class="VPet.Plugin.MutiRedEnvelope.TabRedEnv" xmlns:pu="https://opensource.panuon.com/wpf-ui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Header="{ll:Str 联机红包}"
        xmlns:local="clr-namespace:VPet.Plugin.MutiRedEnvelope" mc:Ignorable="d"
        xmlns:ll="clr-namespace:LinePutScript.Localization.WPF;assembly=LinePutScript.Localization.WPF"
        d:DesignHeight="379" d:DesignWidth="414">
    <TabItem.Resources>
        <ResourceDictionary Source="/VPet-Simulator.Windows.Interface;component/ResourceStyle.xaml" />
    </TabItem.Resources>
    <TabControl pu:TabControlHelper.HeaderPanelBackground="#ff5722" pu:TabControlHelper.ItemsHoverBackground="#ffa270"
            pu:TabControlHelper.ItemsSelectedBackground="#ff8a50" FontSize="16" Background="#ff8a50"
            SelectionChanged="TabControl_SelectionChanged">
        <TabItem Header="{ll:Str 红包消息}">
            <ScrollViewer>
                <StackPanel x:Name="RedMessage" />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="{ll:Str 发红包}">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="{ll:Str 发红包}" VerticalAlignment="Center" FontSize="20"
                        Foreground="#ab000d" Background="{x:Null}" HorizontalAlignment="Center" Grid.ColumnSpan="3"
                        FontWeight="Bold" />
                <Label Grid.Row="1" Grid.Column="0" Content="{ll:Str 金额}" VerticalAlignment="Center"
                        Background="{x:Null}" />
                <TextBox x:Name="TxtAmount" Grid.Row="1" Grid.Column="2" pu:TextBoxHelper.InputLimit="Digit" Text="1"
                        Style="{DynamicResource StandardTextBoxStyle}" />
                <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" ToolTip="{ll:Str '最大金额限制'}"
                        VerticalAlignment="Bottom" FontSize="14" Margin="5">
                            <Run Text="/" />
                            <Run x:Name="runMaxValue" Text="1000" />
                </TextBlock>
                <Label Grid.Row="2" Grid.Column="0" Content="{ll:Str 数量}" FontSize="16" Background="{x:Null}" />
                <TextBox x:Name="TxtCount" Grid.Row="2" Grid.Column="2" pu:TextBoxHelper.InputLimit="Digit" Text="2"
                        Style="{DynamicResource StandardTextBoxStyle}" />
                <TextBlock Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" ToolTip="{ll:Str '最大数量限制'}"
                        VerticalAlignment="Bottom" FontSize="14" Margin="5">
            <Run Text="/" />
            <Run x:Name="runMaxNumber" Text="2" />
                </TextBlock>
                <Label Grid.Row="3" Grid.Column="0" Content="{ll:Str 祝福}" Background="{x:Null}" FontSize="16" />
                <TextBox x:Name="TxtWishes" Grid.Row="3" Grid.Column="2" Text="恭喜发财" FontSize="16"
                        Style="{DynamicResource StandardTextBoxStyle}" />
                <Label Content="{ll:Str '类型'}" Grid.Row="4" Grid.Column="0" Background="{x:Null}" />
                <ComboBox x:Name="combType" Grid.Column="2" pu:ComboBoxHelper.CornerRadius="4" Grid.Row="4" Margin="2,6"
                        FontSize="16">
                    <ComboBoxItem Content="{ll:Str '拼手气'}" IsSelected="True" />
                    <ComboBoxItem Content="{ll:Str '平分'}" />
                    <ComboBoxItem Content="{ll:Str '专属'}" />
                    <ComboBoxItem Content="{ll:Str '口令'}" />
                </ComboBox>
                <Label Content="{ll:Str '发送对象'}" Grid.Row="5" Grid.Column="0" VerticalAlignment="Top"
                        Background="{x:Null}" />
                <ComboBox x:Name="combTarget" Grid.Column="2" pu:ComboBoxHelper.CornerRadius="4" Margin="2,6"
                        Grid.Row="5" />
                <Label Content="{ll:Str '玩具钞'}" Grid.Row="6" Grid.Column="0" VerticalAlignment="Top"
                        Background="{x:Null}" />
                <pu:Switch x:Name="chkFake" Grid.Row="6" Grid.Column="2" Background="Transparent" BorderBrush="#c41c00"
                        BoxHeight="18" BoxWidth="35" CheckedBackground="#ff8a50" CheckedBorderBrush="#c41c00"
                        CheckedToggleBrush="White" Content="{ll:Str 不消耗金钱发红包}" ToggleBrush="#c41c00" ToggleShadowColor="{x:Null}" ToggleSize="14"
                        ToolTip="{ll:Str 不消耗金钱发红包}"/>
                <Button Grid.Row="7" Grid.Column="0" Content="{ll:Str 塞钱进红包}" Click="BtnSendRedEnv_Click" Margin="2"
                        pu:ButtonHelper.CornerRadius="4" Background="#ff5722" FontSize="24" Padding="12,2"
                        Foreground="White" HorizontalAlignment="Center" Grid.ColumnSpan="3" FontWeight="Bold" />
            </Grid>
        </TabItem>
    </TabControl>
</TabItem>
