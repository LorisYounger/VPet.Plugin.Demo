<Border x:Class="VPet.Plugin.MutiRedEnvelope.BorderListGet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:pu="https://opensource.panuon.com/wpf-ui"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ll="clr-namespace:LinePutScript.Localization.WPF;assembly=LinePutScript.Localization.WPF"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VPet.Plugin.MutiRedEnvelope" Margin="5" CornerRadius="5" Background="#ff6f60"
        BorderBrush="#e53935" BorderThickness="2" mc:Ignorable="d" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image x:Name="uimg" Height="30" Width="30" Margin="10,5" Grid.RowSpan="2" />
        <Label x:Name="uname" Background="{x:Null}" Content="洛里斯杨远" Grid.Column="1" FontSize="14"
                VerticalAlignment="Center" />
        <Label x:Name="utime" Background="{x:Null}" Content="16:00:00" Grid.Column="1" Grid.Row="1" FontSize="10"
                Foreground="#616161" />
        <Label x:Name="umoney" Background="{x:Null}" Content="$100.00" Grid.Column="2" VerticalAlignment="Center" />
        <Label x:Name="ubest" Background="#fedb73" Content="{ll:Str '手气最佳'}" Grid.Column="2" Grid.Row="1" FontSize="10"
                BorderBrush="#c79100" BorderThickness="1" pu:LabelHelper.CornerRadius="3" FontWeight="Bold"
                Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="2"
                Foreground="#cb6500" />
    </Grid>
</Border>
